						"sqlReaderQuery": "select [value] from OPENJSON((\n Select * , (\n             select OrderDetailid, \n                    OrderID, \n                    Email, \n                    ProductID, \n                    Quantity, \n                    UnitPrice, (\n\t\t\t\t\t           select * from [dbo].[Item] i \n\t\t\t\t\t\t\t   where od.ProductId = i.ItemId \n\t\t\t\t\t\t\t   for json auto\n                                ) as ProductData\n            from [dbo].[OrderDetails] od \n            where Od.Orderid = o.Orderid for json auto\n            ) OrderDetailData \nfrom Orders o FOR JSON PATH)\n)",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false
				},
